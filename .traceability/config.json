{
  "projectRoot": ".",
  "services": [
    {
      "name": "customer-service",
      "enabled": true,
      "path": "services/customer-service",
      "language": "java",
      "testFramework": "junit",
      "testDirectory": "src/test/java",
      "testPattern": "*Test.java",
      "scenarioFile": ".traceability/scenarios/customer-service.scenarios.yaml",
      "scenarioFormat": "yaml",
      "requiresServiceRunning": false
    },
    {
      "name": "identity-service",
      "enabled": true,
      "path": "services/identity-service",
      "language": "typescript",
      "testFramework": "jest",
      "testDirectory": "test/unit",
      "testPattern": "*.test.ts",
      "scenarioFile": ".traceability/scenarios/identity-service.scenarios.json",
      "scenarioFormat": "json",
      "requiresServiceRunning": false
    }
  ],
  "matching": {
    "strategies": ["exact", "fuzzy", "semantic", "keyword", "levenshtein", "regex"],
    "defaultThreshold": 0.65,
    "weights": {
      "exact": 2.0,
      "regex": 2.0,
      "fuzzy": 1.5,
      "semantic": 1.2,
      "keyword": 1.0,
      "levenshtein": 0.8
    },
    "normalization": {
      "lowercase": true,
      "removePunctuation": true,
      "removeExtraSpaces": true,
      "synonymExpansion": true,
      "stemming": true,
      "removeStopWords": true
    },
    "synonyms": {
      "create": ["add", "insert", "new", "post"],
      "read": ["get", "fetch", "retrieve", "find", "query"],
      "update": ["modify", "edit", "change", "put", "patch"],
      "delete": ["remove", "destroy", "drop"],
      "customer": ["user", "client", "account"],
      "profile": ["account", "user"],
      "validate": ["verify", "check", "assert"],
      "error": ["exception", "failure", "invalid"]
    },
    "stopWords": [
      "a", "an", "the", "and", "or", "but", "is", "are", "was", "were",
      "be", "been", "being", "have", "has", "had", "do", "does", "did",
      "will", "would", "should", "could", "may", "might", "must", "can",
      "of", "to", "in", "for", "on", "at", "by", "with", "from", "as"
    ]
  },
  "reporting": {
    "formats": ["html", "json", "markdown", "csv"],
    "outputDirectory": ".traceability/reports",
    "includeOrphans": true,
    "includeGaps": true,
    "includeStatistics": true,
    "includeTrends": false,
    "generateCharts": false
  },
  "validation": {
    "requireScenarioForEveryTest": false,
    "requireTestForEveryScenario": true,
    "requireTestForNewAPI": true,
    "allowOrphanTests": true,
    "maxOrphanTestsWarning": 10,
    "blockOnOrphanAPI": false,
    "strictMode": false,
    "minimumCoveragePercent": 70,
    "blockOnCriticalGaps": true,
    "blockOnHighRiskGaps": false,
    "allowPartialCoverage": true
  },
  "preCommit": {
    "enabled": true,
    "blockOnP0Gaps": true,
    "blockOnP1Gaps": false,
    "allowOrphanTests": true,
    "maxOrphanTestsThreshold": 15,
    "validateChangedServicesOnly": true
  }
}
