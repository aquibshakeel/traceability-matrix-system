{
  "projectRoot": ".",
  "services": [
    {
      "name": "customer-service",
      "enabled": true,
      "language": "java",
      "testFramework": "junit",
      "testDirectory": "src/test/java",
      "testPattern": "*Test.java"
    },
    {
      "name": "identity-service",
      "enabled": true,
      "language": "java",
      "testFramework": "junit",
      "testDirectory": "src/test/java",
      "testPattern": "*Test.java"
    }
  ],
  "ai": {
    "provider": "anthropic",
    "model": "auto",
    "temperature": 0.0,
    "maxTokens": 2000,
    "batchSize": 3,
    "fallbackProviders": ["anthropic"]
  },
  "paths": {
    "aiCasesDirectory": ".traceability/test-cases/ai_cases",
    "reportsDirectory": ".traceability/reports",
    "note": "AI cases and reports stored locally. Service code and baseline scenarios read from external repos via SERVICE_PATH and TEST_SCENARIO_PATH environment variables."
  }
}
