{
  "name": "@universal/ai-test-coverage",
  "version": "5.0.0",
  "description": "AI-Driven Test Coverage System - Bidirectional scenario completeness detection, change impact analysis, orphan categorization, Git change detection, multi-format reporting (HTML/JSON/CSV/MD), comprehensive pre-commit validation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "ai-generate": "./bin/ai-generate",
    "ai-continue": "./bin/ai-continue"
  },
  "scripts": {
    "build": "tsc",
    "generate": "node bin/ai-generate",
    "generate:api": "node bin/ai-generate-api",
    "continue": "node bin/ai-continue",
    "test:identity": "cd services/identity-service && npm test",
    "test:customer": "cd services/customer-service && ./gradlew test",
    "start:services": "docker-compose up -d",
    "stop:services": "docker-compose down",
    "clean": "rm -rf .traceability/test-cases/ai_cases/* .traceability/test-cases/reports/*"
  },
  "keywords": [
    "unit-testing",
    "traceability",
    "test-coverage",
    "scenario-mapping",
    "universal-validator",
    "microservices",
    "quality-assurance",
    "language-agnostic",
    "gap-analysis",
    "pre-commit",
    "ci-cd",
    "test-automation",
    "semantic-matching",
    "fuzzy-matching",
    "junit",
    "jest",
    "pytest",
    "testng"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aquibshakeel/ai-testing-framework.git"
  },
  "author": "Universal Validator Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "lib/",
    "bin/",
    "scripts/",
    "README.md",
    "LICENSE"
  ]
}
