{
  "name": "@universal/unit-test-traceability-validator",
  "version": "2.0.0",
  "description": "Universal Unit Test Traceability Validator - Language-agnostic system for mapping business scenarios to unit tests with comprehensive gap analysis and automated pre-commit validation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "utt-validate": "./bin/utt-validate",
    "utt-generate-tests": "./bin/utt-generate-tests",
    "utt": "./bin/utt-validate"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/lib/templates && cp -r lib/templates/* dist/lib/templates/",
    "validate": "node bin/utt-validate --all",
    "validate:all": "node bin/utt-validate --all --verbose",
    "validate:identity": "node bin/utt-validate --service identity-service",
    "validate:customer": "node bin/utt-validate --service customer-service",
    "validate:changed": "node bin/utt-validate --changed",
    "install:hooks": "bash scripts/install-hooks.sh",
    "test:identity": "cd services/identity-service && npm test",
    "test:customer": "cd customer-service && ./gradlew test",
    "start:services": "docker-compose up -d",
    "stop:services": "docker-compose down",
    "report:html": "node bin/utt-validate --all --format html",
    "report:json": "node bin/utt-validate --all --format json",
    "report:markdown": "node bin/utt-validate --all --format markdown",
    "clean": "rm -rf .traceability/reports/*",
    "generate:tests": "node bin/utt-generate-tests",
    "generate:tests:verbose": "node bin/utt-generate-tests --verbose"
  },
  "keywords": [
    "unit-testing",
    "traceability",
    "test-coverage",
    "scenario-mapping",
    "universal-validator",
    "microservices",
    "quality-assurance",
    "language-agnostic",
    "gap-analysis",
    "pre-commit",
    "ci-cd",
    "test-automation",
    "semantic-matching",
    "fuzzy-matching",
    "junit",
    "jest",
    "pytest",
    "testng"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.1",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aquibshakeel/ai-testing-framework.git"
  },
  "author": "Universal Validator Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "lib/",
    "bin/",
    "scripts/",
    "README.md",
    "LICENSE"
  ]
}
